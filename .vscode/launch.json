    "version": "0.2.0",
    "configurations": [
        {
            "name": "lnSync",
            "type": "python",
            "request": "launch",
            // "program": "__main__.py",
            "stopOnEntry": true,
            // "program": "/tmp/compiled/lnSync.zip",
            "program": "__main__.py",
            "console": "integratedTerminal",
            "justMyCode": false,
            "args":[
                "--profile=ln_to_lndisk",
                "--rsync",
                "--console-logger-level=info",
                "--file-logger-level=warning",
                "--logging-dir=/tmp/lnsync",
            ]
        }
    ]
}